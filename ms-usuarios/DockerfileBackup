FROM openjdk:17-jdk-alpine as builder

WORKDIR /app/ms-usuarios

COPY ./pom.xml /app
COPY ./ms-usuarios/.mvn /app/ms-usuarios/.mvn
COPY ./ms-usuarios/mvnw /app/ms-usuarios
COPY ./ms-usuarios/pom.xml /app/ms-usuarios

# solamente descarga las dependencias y empaqueta el jar sin codigo fuente ni test y elimina el directorio target
RUN ./mvnw clean package -Dmaven.test.skip -Dmaven.main.skip -Dspring-boot.repackage.skip && rm -r ./target
# RUN ./mvnw dependency:go-offline

COPY ./ms-usuarios/src /app/ms-usuarios/src

RUN ./mvnw clean package -DskipTests

FROM openjdk:17-jdk-alpine as production

WORKDIR /app

COPY --from=builder /app/ms-usuarios/target/ms-usuarios-0.0.1-SNAPSHOT.jar /app/ms-usuarios/ms-usuarios.jar

# RUN useradd -m myuser && chown myuser:myuser /app
# -D es el argumento que se utiliza en Alpine para crear un usuario sin una contrase√±a
RUN adduser -D myuser && chown myuser:myuser /app
# Ejecutar como usuario no root
USER myuser

EXPOSE 8001

ENTRYPOINT ["java", "-jar", "ms-usuarios/ms-usuarios.jar"]